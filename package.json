{
  "name": "git-mob",
  "version": "2.3.0",
  "description": "CLI tool for adding co-authors to commits.",
  "scripts": {
    "build": "rimraf dist && node ./build/main.js",
    "checks": "npm run test && npm run js-lint",
    "test:w": "npm run build -- -w -t & env-cmd -f test-helpers/env.js ava --watch --serial --no-worker-threads",
    "pretest": "npm run build -- -t",
    "test": "npm run testbase",
    "testbase": "env-cmd -f test-helpers/env.js ava --serial --no-worker-threads",
    "minifytest": "npm run build -- -m -t && npm run testbase",
    "js-lint": "xo",
    "preversion": "npm run checks",
    "postversion": "git push --follow-tags",
    "postinstall": "npm run build",
    "prepack": "npm run build -- -m",
    "prepare": "node ./dist/install/create-author-file.js"
  },
  "bin": {
    "git-mob": "bin/mob.js",
    "git-mob-print": "bin/mob-print.js",
    "git-solo": "bin/solo.js",
    "git-add-coauthor": "bin/add-coauthor.js",
    "git-delete-coauthor": "bin/delete-coauthor.js",
    "git-edit-coauthor": "bin/edit-coauthor.js",
    "git-suggest-coauthors": "bin/suggest-coauthors.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rkotze/git-mob.git"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "cli",
    "cli-app",
    "git-pair",
    "git-duet",
    "git",
    "github",
    "co-author",
    "pairing",
    "pair programming",
    "mob programming",
    "extreme programming",
    "xp",
    "social coding"
  ],
  "author": "Richard Kotze",
  "license": "MIT",
  "contributors": [
    {
      "name": "Richard Kotze",
      "url": "https://github.com/rkotze"
    },
    {
      "name": "Dennis Ideler",
      "url": "https://github.com/dideler"
    }
  ],
  "dependencies": {
    "common-tags": "^1.8.0",
    "minimist": "^1.2.6",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@types/node": "^18.7.14",
    "@types/sinon": "^10.0.13",
    "ava": "^4.3.3",
    "env-cmd": "^10.1.0",
    "eol": "^0.9.1",
    "esbuild": "^0.15.6",
    "glob": "^8.0.3",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "tempy": "^3.0.0",
    "typescript": "^4.8.2",
    "xo": "^0.52.3"
  },
  "xo": {
    "space": true,
    "ignores": [
      "bin",
      "dist",
      "test-helpers",
      "*.d.ts"
    ],
    "prettier": true,
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "object-curly-spacing": "off",
      "curly": [
        "error",
        "multi-line"
      ],
      "comma-dangle": "off",
      "ava/no-skip-test": "off",
      "linebreak-style": "off",
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "ignore",
            ":": "ignore"
          }
        }
      ],
      "valid-jsdoc": [
        "warn",
        {
          "requireParamDescription": false,
          "requireReturn": false
        }
      ],
      "import/extensions": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prefer-module": 0,
      "unicorn/no-process-exit": 0,
      "node/prefer-global/process": 0,
      "n/prefer-global/process": 0,
      "n/file-extension-in-import": 0,
      "object-shorthand": 0,
      "arrow-body-style": 0,
      "capitalized-comments": 0,
      "ava/no-ignored-test-files": [
        "error",
        {
          "files": [
            "src/**/*.spec.*"
          ]
        }
      ],
      "@typescript-eslint/object-curly-spacing": "off",
      "@typescript-eslint/comma-dangle": "off",
      "@typescript-eslint/prefer-nullish-coalescing": 0
    }
  },
  "ava": {
    "files": [
      "dist/**/*.spec.js"
    ],
    "ignoredByWatcher": [
      "dist",
      "test-env",
      "test-helpers"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "build/"
      },
      "compile": false
    }
  }
}
