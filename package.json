{
  "name": "git-mob",
  "version": "2.2.0",
  "description": "CLI tool for adding co-authors to commits.",
  "scripts": {
    "build": "node ./build/main.js",
    "checks": "npm run test && npm run js-lint",
    "test:w": "npm run build -- -w & env-cmd -f test-helpers/env.js ava --watch --serial --no-worker-threads",
    "test": "npm run build && env-cmd -f test-helpers/env.js ava --serial --no-worker-threads",
    "js-lint": "xo",
    "preversion": "npm run checks",
    "postinstall": "node ./src/install/create-author-file.js",
    "prepublish": "npm run build -- -m"
  },
  "bin": {
    "git-mob": "bin/mob.js",
    "git-mob-print": "bin/mob-print.js",
    "git-solo": "bin/solo.js",
    "git-add-coauthor": "bin/add-coauthor.js",
    "git-delete-coauthor": "bin/delete-coauthor.js",
    "git-edit-coauthor": "bin/edit-coauthor.js",
    "git-suggest-coauthors": "bin/suggest-coauthors.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rkotze/git-mob.git"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "cli",
    "cli-app",
    "git-pair",
    "git-duet",
    "git",
    "github",
    "co-author",
    "pairing",
    "pair programming",
    "mob programming",
    "extreme programming",
    "xp",
    "social coding"
  ],
  "author": "Richard Kotze",
  "license": "MIT",
  "contributors": [
    {
      "name": "Richard Kotze",
      "url": "https://github.com/rkotze"
    },
    {
      "name": "Dennis Ideler",
      "url": "https://github.com/dideler"
    }
  ],
  "dependencies": {
    "common-tags": "^1.8.0",
    "minimist": "^1.2.6",
    "update-notifier": "^5.1.0"
  },
  "devDependencies": {
    "ava": "^4.3.1",
    "env-cmd": "^10.1.0",
    "eol": "^0.9.1",
    "esbuild": "^0.15.5",
    "sinon": "^14.0.0",
    "tempy": "^1.0.1",
    "xo": "^0.51.0"
  },
  "xo": {
    "space": true,
    "ignores": [
      "build",
      "bin",
      "dist"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ],
      "ava/no-skip-test": "off",
      "linebreak-style": "off",
      "operator-linebreak": [
        "error",
        "after",
        {
          "overrides": {
            "?": "ignore",
            ":": "ignore"
          }
        }
      ],
      "valid-jsdoc": [
        "warn",
        {
          "requireParamDescription": false,
          "requireReturn": false
        }
      ],
      "import/extensions": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/prefer-module": 0,
      "unicorn/no-process-exit": 0,
      "node/prefer-global/process": 0,
      "n/prefer-global/process": 0,
      "n/file-extension-in-import": 0,
      "object-shorthand": 0,
      "arrow-body-style": 0,
      "capitalized-comments": 0
    }
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "ignoredByWatcher": [
      "dist",
      "test-env",
      "test-helpers"
    ]
  }
}
